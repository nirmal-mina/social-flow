SF_ENV=production
SF_LOG_LEVEL=INFO

# DO NOT store real secrets in repo; load these from your secrets manager / pipeline.
SF_SECRET_KEY=${SF_SECRET_KEY}

DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
ELASTICSEARCH_URL=${ELASTICSEARCH_URL}
S3_ENDPOINT=${S3_ENDPOINT}
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}
S3_BUCKET=${S3_BUCKET:-sf-prod-uploads}
KAFKA_BOOTSTRAP_SERVERS=${KAFKA_BOOTSTRAP_SERVERS}

# Production feature toggles
FEATURE_RECOMMENDER_PUBLISH=true
FEATURE_ANALYTICS_INGEST=true
