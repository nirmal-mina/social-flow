{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/validation/captcha_schema.json",
  "title": "CaptchaVerification",
  "description": "Contract used by endpoints to verify captcha results and store metadata for fraud scoring.",
  "type": "object",
  "required": ["token", "provider", "verified", "timestamp"],
  "properties": {
    "token": { "type": "string", "description": "Opaque token returned by CAPTCHA provider." },
    "provider": { "type": "string", "enum": ["recaptcha_v2", "recaptcha_v3", "hcaptcha", "custom"], "default": "recaptcha_v3" },
    "verified": { "type": "boolean" },
    "score": { "type": ["number", "null"], "minimum": 0, "maximum": 1, "description": "Provider spam score (if available)." },
    "action": { "type": ["string", "null"], "description": "Action name used in reCAPTCHA v3." },
    "ip_address": { "type": ["string", "null"], "format": "ipv4" },
    "timestamp": { "type": "string", "format": "date-time" },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
