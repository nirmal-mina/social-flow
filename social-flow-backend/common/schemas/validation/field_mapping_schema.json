{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/validation/field_mapping_schema.json",
  "title": "FieldMapping",
  "description": "Mapping rules for transforming incoming request field names to canonical internal names. Useful for API versioning and compatibility layers.",
  "type": "object",
  "required": ["version", "mappings", "created_at"],
  "properties": {
    "version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "mappings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": { "type": "string", "description": "Incoming field path (dot notation allowed)." },
          "target": { "type": "string", "description": "Canonical internal field path." },
          "transform": { "type": ["string", "null"], "description": "Optional transform function reference (e.g., trim, lower, parse_date)." },
          "required": { "type": "boolean", "default": false },
          "default": { "type": ["string", "number", "boolean", "null", "object", "array"] },
          "notes": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
