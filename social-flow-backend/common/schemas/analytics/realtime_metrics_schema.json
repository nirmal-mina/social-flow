{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/analytics/realtime_metrics_schema.json",
  "title": "RealtimeMetrics",
  "description": "Schema for capturing real-time metrics in high-frequency streaming pipelines (Kafka, Kinesis).",
  "type": "object",
  "required": ["metric_id", "metric_type", "timestamp", "value"],
  "properties": {
    "metric_id": { "type": "string", "format": "uuid" },
    "metric_type": {
      "type": "string",
      "enum": ["active_users", "concurrent_views", "video_buffering_rate", "error_rate"],
      "description": "Type of real-time metric"
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "value": { "type": "number", "description": "Numeric value of metric" },
    "tags": {
      "type": "object",
      "description": "Tags for filtering/aggregation",
      "additionalProperties": { "type": "string" }
    }
  }
}
