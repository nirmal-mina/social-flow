{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/analytics/aggregation_schema.json",
  "title": "AggregatedAnalytics",
  "description": "Schema for daily/weekly/monthly aggregated analytics snapshots.",
  "type": "object",
  "required": ["aggregation_id", "time_window", "metrics"],
  "properties": {
    "aggregation_id": { "type": "string", "format": "uuid" },
    "time_window": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly"],
      "description": "Aggregation period"
    },
    "start_date": { "type": "string", "format": "date" },
    "end_date": { "type": "string", "format": "date" },
    "metrics": {
      "type": "object",
      "properties": {
        "total_views": { "type": "integer", "minimum": 0 },
        "total_likes": { "type": "integer", "minimum": 0 },
        "total_comments": { "type": "integer", "minimum": 0 },
        "total_shares": { "type": "integer", "minimum": 0 },
        "avg_watch_time": { "type": "number" },
        "revenue": { "type": "number", "minimum": 0 }
      }
    }
  }
}
