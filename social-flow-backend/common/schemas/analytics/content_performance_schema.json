{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/analytics/content_performance_schema.json",
  "title": "ContentPerformance",
  "description": "Tracks performance of posts and videos.",
  "type": "object",
  "required": ["content_id", "snapshot_date", "views"],
  "properties": {
    "content_id": { "type": "string" },
    "snapshot_date": { "type": "string", "format": "date" },
    "views": { "type": "integer", "minimum": 0 },
    "unique_viewers": { "type": "integer", "minimum": 0 },
    "avg_watch_time_seconds": { "type": "integer", "minimum": 0 },
    "audience_reach": { "type": "integer", "minimum": 0 },
    "geo_distribution": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "country": { "type": "string" },
          "views": { "type": "integer" }
        }
      }
    }
  }
}
