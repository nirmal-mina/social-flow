{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/video/transcoding_job_schema.json",
  "title": "TranscodingJob",
  "description": "Request/response model for transcoding jobs. Used by job queue, worker status APIs and audit logs.",
  "type": "object",
  "required": ["job_id", "video_id", "input_asset_id", "requested_at", "preset", "status"],
  "additionalProperties": false,
  "properties": {
    "job_id": { "type": "string", "format": "uuid" },
    "video_id": { "type": "string", "format": "uuid" },
    "input_asset_id": { "type": "string" },
    "requested_by": { "type": ["string", "null"], "description": "user_id or system job that requested this." },
    "requested_at": { "type": "string", "format": "date-time" },
    "preset": { "type": "string", "description": "Preset name used by transcoder (e.g., web_1080p_h264)." },
    "parameters": {
      "type": "object",
      "description": "Optional parameter overrides (max_bitrate, crf, audio_bitrate, keyframe_interval)",
      "additionalProperties": true
    },
    "status": { "type": "string", "enum": ["queued", "running", "failed", "completed", "canceled"], "default": "queued" },
    "started_at": { "type": ["string", "null"], "format": "date-time" },
    "finished_at": { "type": ["string", "null"], "format": "date-time" },
    "progress_percent": { "type": "number", "minimum": 0, "maximum": 100 },
    "outputs": {
      "type": "array",
      "items": { "$ref": "https://socialflow.com/schemas/video/video_asset_schema.json" },
      "description": "List of assets created by the job (renditions, proxies)."
    },
    "error": {
      "type": ["object", "null"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
