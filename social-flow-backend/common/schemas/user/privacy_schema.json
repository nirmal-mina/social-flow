{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/user/privacy_schema.json",
  "title": "PrivacyAndConsent",
  "description": "User consent, data retention and deletion preferences. Critical for GDPR/CCPA compliance; ensure strict access control.",
  "type": "object",
  "required": ["user_id", "consents"],
  "additionalProperties": false,
  "properties": {
    "user_id": { "type": "string", "format": "uuid" },
    "consents": {
      "type": "object",
      "description": "Record of consents given by user. Each key should be a consent type with timestamp/meta.",
      "additionalProperties": {
        "type": "object",
        "required": ["granted", "at"],
        "properties": {
          "granted": { "type": "boolean" },
          "at": { "type": "string", "format": "date-time" },
          "via": { "type": "string", "description": "UI/SMS/API reference" },
          "version": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "data_retention": {
      "type": "object",
      "properties": {
        "profile_retention_days": { "type": "integer", "minimum": 0, "description": "Custom retention override for this user." },
        "analytics_retention_days": { "type": "integer", "minimum": 0 }
      }
    },
    "data_deletion": {
      "type": "object",
      "properties": {
        "deletion_requested": { "type": "boolean", "default": false },
        "deletion_requested_at": { "type": ["string", "null"], "format": "date-time" },
        "deletion_completed_at": { "type": ["string", "null"], "format": "date-time" }
      }
    },
    "third_party_sharing_opt_out": { "type": "boolean", "default": false }
  }
}
