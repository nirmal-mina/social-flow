# ================================
# Production Environment Configuration
# ================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit the actual .env.production file with real credentials
# ================================

# ================================
# Application Settings
# ================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production
VERSION=1.0.0

# ================================
# Database Configuration
# ================================
DATABASE_NAME=socialflow
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:your-database-password@postgres:5432/socialflow

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379/0
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/2

# ================================
# AWS Configuration
# ================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Storage
S3_BUCKET=socialflow-media-production
S3_REGION=us-east-1

# MediaConvert (Video Transcoding)
MEDIACONVERT_ENDPOINT=https://your-mediaconvert-endpoint.amazonaws.com
MEDIACONVERT_ROLE_ARN=arn:aws:iam::123456789012:role/MediaConvertRole
MEDIACONVERT_QUEUE_ARN=arn:aws:mediaconvert:us-east-1:123456789012:queues/Default

# IVS (Live Streaming)
IVS_CHANNEL_ARN=arn:aws:ivs:us-east-1:123456789012:channel/your-channel-id
IVS_STREAM_KEY=your-stream-key

# Rekognition (Content Moderation)
REKOGNITION_MIN_CONFIDENCE=80.0

# Comprehend (Text Analysis)
COMPREHEND_LANGUAGE=en

# ================================
# Stripe Configuration (Payments)
# ================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Connect (Payouts)
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id

# ================================
# SendGrid Configuration (Email)
# ================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@socialflow.com
SENDGRID_FROM_NAME=SocialFlow

# ================================
# Firebase Configuration (Push Notifications)
# ================================
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com"}
FIREBASE_PROJECT_ID=your-firebase-project-id

# ================================
# Twilio Configuration (SMS)
# ================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# JWT Configuration
# ================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ================================
# OAuth Configuration
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-apple-private-key\n-----END PRIVATE KEY-----

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=https://socialflow.com,https://www.socialflow.com,https://app.socialflow.com
CORS_ALLOW_CREDENTIALS=true

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ================================
# Monitoring & Logging
# ================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/socialflow/backend
CLOUDWATCH_LOG_STREAM=production

# Log Level
LOG_LEVEL=INFO

# ================================
# Security Settings
# ================================
# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Settings
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ================================
# Feature Flags
# ================================
FEATURE_VIDEO_ENCODING=true
FEATURE_COPYRIGHT_DETECTION=true
FEATURE_LIVE_STREAMING=true
FEATURE_CONTENT_MODERATION=true
FEATURE_PAYMENTS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# ================================
# Performance Settings
# ================================
# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Connection Pool
REDIS_POOL_SIZE=50
REDIS_MAX_CONNECTIONS=100

# Celery Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# ================================
# Content Limits
# ================================
MAX_VIDEO_SIZE_MB=5000
MAX_IMAGE_SIZE_MB=10
MAX_UPLOAD_CHUNK_SIZE_MB=10
MAX_VIDEO_DURATION_SECONDS=7200
MAX_LIVE_STREAM_DURATION_HOURS=24

# ================================
# Cache Settings
# ================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1000

# ================================
# CDN Configuration
# ================================
CDN_DOMAIN=cdn.socialflow.com
CDN_ENABLED=true

# ================================
# Build Information (Auto-generated)
# ================================
BUILD_DATE=2025-10-02T00:00:00Z
VCS_REF=main
