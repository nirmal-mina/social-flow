[MASTER]
# Load our plugin module automatically if desired:
load-plugins=pylint_plugins

# Basic settings
ignore=venv,build,dist
jobs=4
persistent=yes

[MESSAGES CONTROL]
# You can disable rules here. We keep most defaults enabled but show how to disable if needed.
# disable=C0103  ; disable "invalid-name" if you want to rely purely on our naming plugin

[REPORTS]
output-format = colorized
reports = no
evaluation = 10.0 - ((float(5 * error) + warning + refactor + convention) / statement) * 100

[FORMAT]
max-line-length = 100

[TYPECHECK]
ignored-modules =
    typing

[SIMILARITIES]
min-similarity-lines = 4

[DESIGN]
# We include our own complexity checker; keep default too if desired.
max-args = 8
max-locals = 30
max-returns = 6
max-branches = 12
max-statements = 150

[BASIC]
# Tighten naming style checks a bit (we also provide additional checks via plugin)
variable-rgx=[a-z_][a-z0-9_]{0,30}$
function-rgx=[a-z_][a-z0-9_]{0,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[REPORTS]
# minimal reporting in typical CI runs
msg-template = {path}:{line}:{column}: [{msg_id}({symbol})] {msg}
