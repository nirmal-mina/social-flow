{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/validation/rate_limit_schema.json",
  "title": "RateLimitPolicy",
  "description": "Defines throttling and quota policies. Intended to be consumed by API gateways or middleware.",
  "type": "object",
  "required": ["policy_id", "scope", "limit", "window_seconds", "action_on_exceed"],
  "properties": {
    "policy_id": { "type": "string" },
    "schema_version": { "type": "string", "default": "1.0" },
    "scope": { "type": "string", "enum": ["ip", "user", "api_key", "client_id", "global"], "description": "Dimension to apply rate limit." },
    "limit": { "type": "integer", "minimum": 1, "description": "Max allowed requests in the window." },
    "window_seconds": { "type": "integer", "minimum": 1, "description": "Time window in seconds." },
    "burst": { "type": "integer", "minimum": 0, "description": "Optional burst capacity." },
    "action_on_exceed": { "type": "string", "enum": ["throttle", "block", "challenge", "warn"], "default": "throttle" },
    "backoff_seconds": { "type": "integer", "minimum": 0, "description": "Optional backoff to apply after limit exceeded." },
    "exempt_roles": { "type": "array", "items": { "type": "string" } },
    "notice_message": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}
