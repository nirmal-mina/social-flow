{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/validation/input_sanitization_schema.json",
  "title": "InputSanitization",
  "description": "Rules for input normalization and sanitization. These are hints to sanitizers/transformers and may include white/blacklists and HTML sanitization modes.",
  "type": "object",
  "properties": {
    "field": { "type": "string", "description": "Field name this rule applies to." },
    "trim": { "type": "boolean", "default": true },
    "collapse_whitespace": { "type": "boolean", "default": true },
    "strip_control_characters": { "type": "boolean", "default": true },
    "normalize_unicode": {
      "type": "string",
      "enum": ["NFC", "NFD", "NFKC", "NFKD"],
      "default": "NFC"
    },
    "allow_html": {
      "type": "boolean",
      "description": "If false, sanitizer must remove all HTML tags."
    },
    "html_policy": {
      "type": "object",
      "description": "When allow_html is true, define allowed tags/attributes and policy.",
      "properties": {
        "allowed_tags": { "type": "array", "items": { "type": "string" } },
        "allowed_attributes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "strip_disallowed_content": { "type": "boolean", "default": true },
        "allow_iframe_from": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "forbidden_substrings": { "type": "array", "items": { "type": "string" } },
    "max_length": { "type": "integer", "minimum": 0 }
  }
}
