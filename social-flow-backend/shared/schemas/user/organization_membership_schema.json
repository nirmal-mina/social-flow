{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://socialflow.com/schemas/user/organization_membership_schema.json",
  "title": "OrganizationMembership",
  "description": "Represents user membership in organizations, teams or multi-tenant accounts.",
  "type": "object",
  "required": ["user_id", "organization_id", "role", "joined_at"],
  "additionalProperties": false,
  "properties": {
    "membership_id": { "type": "string", "format": "uuid" },
    "user_id": { "type": "string", "format": "uuid" },
    "organization_id": { "type": "string", "format": "uuid" },
    "role": { "type": "string", "description": "Role in organization (owner, admin, member, billing_admin)" },
    "permissions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional explicit permission overrides."
    },
    "joined_at": { "type": "string", "format": "date-time" },
    "invited_by": { "type": ["string", "null"], "format": "uuid" },
    "status": { "type": "string", "enum": ["active", "invited", "suspended", "removed"], "default": "active" },
    "metadata": { "type": "object", "additionalProperties": true }
  }
}
