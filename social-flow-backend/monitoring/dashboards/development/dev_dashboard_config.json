{
  "dashboard_name": "Development Monitoring Dashboard",
  "refresh_interval_seconds": 30,
  "widgets": [
    {
      "type": "timeseries",
      "title": "API Latency",
      "metric": "http_request_duration_seconds",
      "thresholds": { "warning": 200, "critical": 500 }
    },
    {
      "type": "counter",
      "title": "Build Failures",
      "metric": "ci_build_failures_total",
      "thresholds": { "warning": 5, "critical": 15 }
    },
    {
      "type": "heatmap",
      "title": "Error Rate Distribution",
      "metric": "application_errors_total",
      "thresholds": { "warning": 0.02, "critical": 0.05 }
    }
  ]
}
